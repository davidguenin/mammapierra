{{ 'section-hero.css' | asset_url | stylesheet_tag }}
{{ 'bulma.css' | asset_url | stylesheet_tag }}

<div class="hero-main">
  <div>
    <div class="bulma-columns bulma-is-gapless">
      <div class="bulma-column bulma-is-half">
        <div
          class="hero-main-left bulma-is-flex bulma-is-flex-direction-column bulma-is-justify-content-center bulma-has-text-centered"
          {% if section.settings.hero_image %}
            style="background-image: url('{{ section.settings.hero_image | image_url: width: 1200 }}'); background-size: cover; background-position: center;"
          {% endif %}
        >
          <div>
            <h2
              {% if section.settings.hero_title_color %}
                style="color: {{ section.settings.hero_title_color }};"
              {% endif %}
            >
              {{ section.settings.hero_title | default: "Les perles de l'été et de la mer" }}
            </h2>
            <a
              href="{{ section.settings.hero_link | default: '#' }}"
              class="bulma-button bulma-is-white bulma-is-outlined"
            >
              {{- section.settings.hero_button_text | default: 'Découvrir la collection' -}}
            </a>
          </div>
        </div>
      </div>
      <div class="bulma-column bulma-is-half">
        <div
          class="hero-main-right bulma-is-flex bulma-is-flex-direction-column	bulma-is-justify-content-center"
          {% if section.settings.hero_image_right %}
            style="background-image: url('{{ section.settings.hero_image_right | image_url: width: 1200 }}'); background-size: cover; background-position: center;"
          {% endif %}
        >
          <div
            class="hero-main-right-big-img"
            style="
              {% if section.settings.hero_image_right_big %}background-image: url('{{ section.settings.hero_image_right_big | image_url: width: 1200 }}'); background-size: cover; background-position: center;{% endif %}
              {% if section.settings.border_color %}border: 5px solid {{ section.settings.border_color }};{% endif %}
            "
          >
            <div></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Big",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Image Gauche"
    },
    {
      "type": "image_picker",
      "id": "hero_image_right",
      "label": "Image Droite (Parent)"
    },
    {
      "type": "image_picker",
      "id": "hero_image_right_big",
      "label": "Image Droite (Enfant)"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Couleur de la bordure"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Titre",
      "default": "Les perles de l'été et de la mer"
    },
    {
      "type": "url",
      "id": "hero_link",
      "label": "Lien du bouton"
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Texte du bouton",
      "default": "Découvrir la collection"
    },
    {
      "type": "color",
      "id": "hero_title_color",
      "label": "Couleur du titre"
    }
  ],
  "presets": [
    {
      "name": "Hero Big"
    }
  ]
}
{% endschema %}
